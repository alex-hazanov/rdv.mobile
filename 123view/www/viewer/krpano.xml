<krpano>

	<!-- grid preview pano -->
	<preview type="grid(cube,64,64,512,0xCCCCCC,0xF6F6F6,0x999999);" />

	<!-- view/fov settings -->
	<view hlookat="0" vlookat="0" fovtype="VFOV" fov="90" fovmin="30" fovmax="150" limitview="auto" vlookatmin="-90" vlookatmax="+90" />

	<plugin name="gyro" url="plugins/gyro.js" enabled="true" camroll="true" friction="0.95" velastic="0.2" devices="html5" keep="true" />

	<layer name="bottombar" type="container" bgcolor="0x000000" bgalpha="0.5" align="leftbottom" width="100%" height="80">
		<layer name="gyrobutton" url="gyroicon.png" scale="1" align="right" x="10" visible="true" 
		       onclick="switch(plugin[gyro].enabled);"
		       />
	</layer>
</krpano>
